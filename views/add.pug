doctype html
html
  head
    title Thêm công việc mới
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap")
    link(rel="stylesheet", href="/css/style.css")
  body
    .anime-character.left (◕‿◕)ノ
    .anime-character.right ヽ(★‿★)ノ
    
    .container
      h1 Thêm công việc mới
      
      form(action="/add" method="POST").add-form
        .form-group
          input(type="text", name="description", placeholder="Nhập công việc mới...", required).input-text
        
        .form-group(style="justify-content: center")
          button(type="submit").btn.btn-primary
            | Thêm 
            span.emoji 🌟
          a(href="/").btn.btn-danger
            | Quay lại 
            span.emoji ↩️

    script.
      document.querySelector('form').addEventListener('submit', function() {
        const btn = this.querySelector('button');
        btn.innerHTML = 'Đang thêm <span class="emoji">⏳</span>';
        btn.disabled = true;
      });
