doctype html
html
  head
    title Thêm hoạt động mới
    link(
      rel="stylesheet",
      href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap"
    )
    link(rel="stylesheet", href="/css/style.css")
  body
    .anime-character.left (◕‿◕)ノ
    .anime-character.right ヽ(★‿★)ノ

    .container
      h1 Thêm ghi chú mới

      form.add-form(action="/add", method="POST")
        .form-group
          input.input-text(
            type="text",
            name="description",
            placeholder="Nhập ghi chú mới...",
            required
          )

        .form-group(style="justify-content: center")
          button.btn.btn-primary(type="submit")
            | Thêm
            span.emoji 🌟
          a.btn.btn-danger(href="/")
            | Quay lại
            span.emoji ↩️

    script.
      document.querySelector("form").addEventListener("submit", function () {
        const btn = this.querySelector("button");
        btn.innerHTML = 'Đang thêm <span class="emoji">⏳</span>';
        btn.disabled = true;
      });
